# Set default values for all accounts
defaults
auth           off
tls            off
tls_starttls   off

# Use syslog for logging, which is friendly to unprivileged users like www-data
syslog         on

# Account for MailHog
account        mailhog
# CORRECTED: The hostname is now on its own line without any comments
host           mailhog
port           1025
from           default_sender@ogame.local

# Set mailhog as the default account
account default : mailhog